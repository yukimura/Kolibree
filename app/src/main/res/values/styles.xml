<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow_kolibree</item>
        <item name="colorPrimaryDark">@color/yellow_kolibree</item>
        <item name="colorAccent">@color/blue_kolibree</item>
        <item name="colorControlHighlight">@color/blue_kolibree</item>
        <item name="colorControlNormal">@color/yellow_kolibree</item>
        <item name="colorControlActivated">@color/yellow_kolibree</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:buttonStyle">@style/button</item>

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="AppTheme.ToolBarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textSize">17sp</item>
        <item name="titleTextAppearance">@style/AppTheme.ToolBarStyle.TextAppearance</item>
    </style>

    <style name="AppTheme.ToolBarStyle.TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
